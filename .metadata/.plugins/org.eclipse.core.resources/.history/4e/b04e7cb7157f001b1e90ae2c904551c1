package protocol3.events;

import org.bukkit.Location;
import org.bukkit.Material;
import org.bukkit.entity.EntityType;
import org.bukkit.event.Listener;
import org.bukkit.event.entity.EntitySpawnEvent;
import org.bukkit.inventory.ItemStack;

import protocol3.backend.Config;

public class LagPrevention implements Listener
{
	public int currentWithers = 0;

	public void onEntitySpawn(EntitySpawnEvent e)
	{
		int witherLimit = Integer.parseInt(Config.getValue("wither.limit"));
		if (e.getEntityType().equals(EntityType.WITHER))
		{
			if (currentWithers > witherLimit)
			{
				Location loc = e.getLocation();
				e.getLocation().getWorld().dropItem(loc, new ItemStack(Material.SOUL_SAND, 4));
				e.getLocation().getWorld().dropItem(loc, new ItemStack(Material.WITHER_SKELETON_SKULL, 3));
				e.setCancelled(true);
			}
			currentWithers++;
		}
	}
}
